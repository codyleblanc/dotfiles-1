[user]
    name = Cody LeBlanc
    email = cody@coderawr.com

[core]
	excludesfile = ~/.git/global_ignore
    editor = /usr/bin/vim
    filemode = false

[init]
    templatedir = ~/.git/template

[branch]
    autosetuprebase = always

[push]
    default = simple

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    # Show verbose output about tags, branches, or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v

    st = status -s
    co = checkout
    ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    la = "!git config -l | grep alias | cut -c 7-"

    hist = "log --graph --pretty=format:'%Cred%h%Creset %d %s %Cgreen(%cr)%Creset %Cblue[%an]%Creset' --abbrev-commit --date=relative"
    ahead = "log @{u}...HEAD --graph --decorate --left-right --boundary --pretty=format:'%Cred%h%Creset %d %s %Cgreen(%cr)%Creset %Cblue[%an]%Creset' --abbrev-commit --date=relative"
    today = "log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative"

[difftool "sourcetree"]
	cmd = mvim -d \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = "v "
	trustExitCode = true
